<?xml version="1.0" encoding="UTF-8"?>
<CompositeView xsi:noNamespaceSchemaLocation="CLOUD_APP_MARKUP"
    layout="{layout.navi}" propertySetName="navi">

  <include
      markup="common_title_bar"
      id="action_bar" />


    <Button
        id="query_btn"
        text="查询"
        width="{dp(60)}"
        height="{dp(40)}"
        fontSize="25sp"
        color="{config.common_button_color}"
        align="{enum.TextView.Align.Center}"
        verticalAlign="{enum.TextView.VerticalAlign.Middle}"
        multiState="{config.common_button_multistate}"
    />

    <TextField
        id="name_input_query_TextField"
        width="{sdp(200)}"
        height="{dp(60)}"
        background="transparent"
        borderWidth="{dp(0)}"
        fontSize="30sp"
        maxLength="40"
        text=""
        paddingLeft="{dp(0)}"
        placeholder="输入用户名"
        placeholderColor="{config.placeholderColor}"
        cursorColor="transparent"
        clearable = "false"
        color="{config.textColor}"/>

    <TextView
        id="query_content"
        text=""
        width="{dp(100)}"
        height="{dp(50)}"
        fontSize="30sp"
        color="{config.common_button_color}"
        background="#FF6600"
        align="{enum.TextView.Align.Center}"
        verticalAlign="{enum.TextView.VerticalAlign.Middle}"
    />

    <Button
        id="register_btn"
        text="注册"
        width="{dp(60)}"
        height="{dp(40)}"
        fontSize="25sp"
        color="{config.common_button_color}"
        align="{enum.TextView.Align.Center}"
        verticalAlign="{enum.TextView.VerticalAlign.Middle}"
        multiState="{config.common_button_multistate}"
    />

    <TextField
        id="name_input_register_TextField"
        width="{sdp(200)}"
        height="{dp(60)}"
        background="transparent"
        borderWidth="{dp(0)}"
        fontSize="30sp"
        maxLength="40"
        text=""
        paddingLeft="{dp(0)}"
        placeholder="输入用户名"
        placeholderColor="{config.placeholderColor}"
        cursorColor="transparent"
        clearable = "false"
        color="{config.textColor}"/>

    <TextField
        id="pwd_input_register_TextField"
        width="{sdp(200)}"
        height="{dp(60)}"
        background="transparent"
        borderWidth="{dp(0)}"
        fontSize="30sp"
        maxLength="40"
        text=""
        paddingLeft="{dp(0)}"
        placeholder="输入密码"
        placeholderColor="{config.placeholderColor}"
        cursorColor="transparent"
        clearable = "false"
        color="{config.textColor}"/>

    <TextView
        id="register_content"
        text=""
        width="{dp(100)}"
        height="{dp(50)}"
        fontSize="30sp"
        color="{config.common_button_color}"
        background="#FF6600"
        align="{enum.TextView.Align.Center}"
        verticalAlign="{enum.TextView.VerticalAlign.Middle}"
    />

</CompositeView>





