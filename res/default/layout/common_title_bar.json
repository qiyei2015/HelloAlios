{
    "title_bar": {
        "type": "RelativeLayout",
        "params": {
            "back_img": {
                "align": {
                    "left": "parent",
                    "bottom": "parent"
                },
                "margin": {
                    "left": "{sdp(100)}"
                }
            },
            "title": {
                "align": {
                    "left": {
                        "target": "back_img",
                        "side": "right"
                    },
                    "top": "parent",
                    "right": "parent"
                },
                "margin": {
                    "left": "{config_title_bar.title_margin_left}",
                    "top": "{config_title_bar.title_margin_top}"
                }
            },
            "divider": {
                "align": {
                    "bottom": "parent",
                    "left": "parent",
                    "right": "parent"
                },
                "margin": {
                    "left": "{config_title_bar.divider_margin}",
                    "right": "{config_title_bar.divider_margin}"
                }
            }
        }
    }
}