<?xml version="1.0" encoding="UTF-8"?>
<CompositeView xsi:noNamespaceSchemaLocation="CLOUD_APP_MARKUP"
    id="tv" layout="{layout.main}" propertySetName="main">

  <include
      markup="common_title_bar"
      id="action_bar" />

<TextView
    id="content"
    text="Hello Page"
    width="{dp(360)}"
