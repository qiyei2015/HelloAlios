{
    "list": {
        "type": "RelativeLayout",
        "params": {
            "action_bar": {
                "align": {
                    "left": "parent",
                    "right": "parent",
                    "top": "parent"
                }
            },
            "content_list": {
                "align": {
                    "left": "parent",
                    "right": "parent",
                    "top": {
                        "target": "action_bar",
                        "side": "bottom"
                    },
                    "bottom": "parent"
                },
                "margin": {
                    "left": "{config.common_left_margin}",
                    "right": "{config.common_right_margin}"
                }
            },
            "default_loading": {
                "align": {
                    "left": "parent",
                    "right": "parent",
                    "top": {
                        "target": 0,
                        "side": "bottom"
                    },
                    "bottom": "parent"
                }
            }
        }
    }
}