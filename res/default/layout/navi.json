{
    "navi": {
        "type": "RelativeLayout",
        "params": {
            "action_bar": {
                "align": {
                    "left": "parent",
                    "right": "parent",
                    "top": "parent"
                }
            },
            "query_btn": {
                "align": {
                    "top": {
                        "target": "action_bar",
                        "side": "bottom"
                    },
                    "left": "parent"
                },
                "margin": {
                    "left": "{config.common_left_margin}",
                    "right": "{config.common_right_margin}",
                    "top": " {sdp(100)}"
                }
            },
            "name_input_query_TextField": {
                "align": {
                    "left": {
                        "target": "query_btn",
                        "side": "right"
                    },
                    "top": {
                        "target": "query_btn",
                        "side": "top"
                    }
                },
                "margin": {
                    "left": "{config.common_left_margin}",
                    "right": "{config.common_right_margin}"
                }
            },
            "query_content": {
                "align": {
                    "left": {
                        "target": "name_input_query_TextField",
                        "side": "right"
                    },
                    "right": "parent",
                    "top": {
                        "target": "query_btn",
                        "side": "top"
                    }
                },
                "margin": {
                    "left": "{config.common_left_margin}",
                    "right": "{config.common_right_margin}"
                }
            },

            "register_btn": {
                "align": {
                    "top": {
                        "target": "query_btn",
                        "side": "bottom"
                    },
                    "left": "parent"
                },
                "margin": {
                    "left": "{config.common_left_margin}",
                    "right": "{config.common_right_margin}",
                    "top": " {sdp(50)}"
                }
            },
            "name_input_register_TextField": {
                "align": {
                    "left": {
                        "target": "register_btn",
                        "side": "right"
                    },
                    "top": {
                        "target": "register_btn",
                        "side": "top"
                    }
                },
                "margin": {
                    "left": "{config.common_left_margin}",
                    "right": "{config.common_right_margin}"
                }
            },
            "pwd_input_register_TextField": {
                "align": {
                    "left": {
                        "target": "name_input_register_TextField",
                        "side": "right"
                    },
                    "top": {
                        "target": "name_input_register_TextField",
                        "side": "top"
                    }
                },
                "margin": {
                    "left": "{config.common_left_margin}",
                    "right": "{config.common_right_margin}"
                }
            },
            "register_content": {
                "align": {
                    "left": {
                        "target": "pwd_input_register_TextField",
                        "side": "right"
                    },
                    "right": "parent",
                    "top": {
                        "target": "pwd_input_register_TextField",
                        "side": "top"
                    }
                },
                "margin": {
                    "left": "{config.common_left_margin}",
                    "right": "{config.common_right_margin}"
                }
            }
        }
    }
}